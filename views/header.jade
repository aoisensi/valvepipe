header.mdl-layout__header
  .mdl-layout__header-row
    //Title
    span.mdl-layout-title ValvePipe
    
    //Navigation
    if(user)
      nav.mdl-navigation
        a.mdl-navigation__link(href='/game') Game
        a.mdl-navigation__link(href='/connect') Connect
    
    //Spacer
    .mdl-layout-spacer
    
    //Login Button
    if user
      a.mdl-navigation__link(href='http://steamcommunity.com/profiles/#{user.id}')
        img(src='#{user.avatar}')
        span #{user.name}
    else
      a.mdl-navigation__link(href='/login')
        img(src='https://steamcommunity-a.akamaihd.net/public/images/signinthroughsteam/sits_small.png')
    
    //Menu Button
    button#demo-menu-lower-right.mdl-button.mdl-js-button.mdl-button--icon
      i.material-icons more_vert
    
    //Menu List
    ul.mdl-menu.mdl-menu--bottom-right.mdl-js-menu.mdl-js-ripple-effect(for='demo-menu-lower-right')
      li.mdl-menu__item
        a(href='/logout') Logout